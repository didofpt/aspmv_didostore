@model PagedList.IPagedList<Model.EF.Order>
@using PagedList.Mvc;
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section header{
    Danh sách đơn hàng
}

@section jsFooter{
    <script src="~/Assets/admin/dist/js/controller/orderController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="row">
                    @using (Html.BeginForm("Index", "Order", FormMethod.Get))
                    {
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <div class="col-md-4 col-md-offset-4">
                                <input type="text" name="searchString" placeholder="Nhập giá trị tìm kiếm" class="form-control" value="@ViewBag.searchString" />
                            </div>
                            <div class="col-md-2">
                                <input type="submit" name="name" class="btn btn-info btn-block btn-outline" value="Tìm kiếm" />
                            </div>
                        </div>
                    }

                </div>
                <p></p>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên Khách hàng</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th>Ngày tạo</th>
                                <th>Tình trạng</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ShipName</td>
                                    <td>@item.ShipMobile</td>
                                    <td>@item.ShipAddress</td>
                                    <td>@item.ShipEmail</td>
                                    <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td>
                                        <a href="#" data-id="@item.ID" class="btn-active">@(item.Status == true ? "Rồi" : "Chưa")</a>
                                    </td>
                                    <td>
                                        <a href="/Admin/Order/Detail/@item.ID">Chi tiết</a>/
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>

