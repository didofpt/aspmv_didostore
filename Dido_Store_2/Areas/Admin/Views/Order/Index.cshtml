@model PagedList.IPagedList<Model.EF.Order>
@using PagedList.Mvc;
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section header{
    Danh sách đơn hàng
}

@section jsFooter{
    <script src="~/Assets/admin/dist/js/controller/orderController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p></p>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên Khách hàng</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th>Ngày tạo</th>
                                <th>Tình trạng</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ShipName</td>
                                    <td>@item.ShipMobile</td>
                                    <td>@item.ShipAddress</td>
                                    <td>@item.ShipEmail</td>
                                    <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td>
                                        @(item.Status == true ? "Rồi" : "Chưa")
                                    </td>
                                    <td>
                                        <a href="/Admin/OrderDetail/Index/@item.ID">Chi tiết</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>

