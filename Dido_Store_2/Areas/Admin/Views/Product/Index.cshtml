@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;
@{
                ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách sản phẩm
}

@section jsFooter{
    <script src="~/Assets/admin/dist/js/controller/productController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="row">
                    @using(Html.BeginForm("Index", "Product", FormMethod.Get))
                    {
                    <div class="form-group">
                        <div class="col-md-2">
                            <a href="/Admin/Product/Create" class="btn btn-primary btn-block btn-outline">Thêm mới</a>
                        </div>
                        <div class="col-md-4 col-md-offset-4">
                            <input type="text" name="searchString" placeholder="Nhập giá trị tìm kiếm" class="form-control" value="@ViewBag.searchString" />
                        </div>
                        <div class="col-md-2">
                            <input type="submit" name="name" class="btn btn-info btn-block btn-outline" value="Tìm kiếm" />
                        </div>
                    </div>
                    }

                </div>
                <p></p>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Ngày tạo</th>
                                <th>Tình trạng</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach(var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@(item.CreatedDate!=null ?item.CreatedDate.Value.ToString("dd/MM/yyyy"):"")</td>
                                    <td>
                                        <a href="#" data-id="@item.ID" class="btn-active">@(item.Status == true ? "Kích họat" : "Khóa")</a>
                                    </td>
                                    <td>
                                        <a href="/Admin/Product/Edit/@item.ID">Sửa</a>/
                                        <a href="/Admin/Product/Edit/@item.ID">Xóa</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = ViewBag.searchString }))
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>