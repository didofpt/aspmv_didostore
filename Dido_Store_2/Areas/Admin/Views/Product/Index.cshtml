@model IEnumerable<Model.EF.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách sản phẩm
}

@section jsFooter{

    <script src="~/Assets/admin/dist/js/controller/productController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Ngày tạo</th>
                                <th>Tình trạng</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach(var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.CreatedDate</td>
                                    <td>
                                        <a href="#" data-id="@item.ID" class="btn-active">@(item.Status == true ? "Kích họat" : "Khóa")</a>
                                    </td>
                                    <td>
                                        <a href="/Admin/Product/Edit/@item.ID">Sửa</a>/
                                        <a href="/Admin/Product/Edit/@item.ID">Xóa</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>