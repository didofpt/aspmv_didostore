@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    Danh sách người dùng
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    @using(Html.BeginForm("Index", "User", FormMethod.Get))
                    {
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-6">
                                <input type="text" name="searchString" placeholder="Nhập giá trị tìm kiếm" class="form-control" value="@ViewBag.searchString" />
                            </div>
                            <div class="col-md-2">
                                <input type="submit" name="name" class="btn btn-info btn-block btn-outline" value="Tìm kiếm" />
                            </div>
                        </div>
                    }

                </div>
                <p></p>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Tên</th>
                                <th>Ngày sinh</th>
                                <th>SĐT</th>
                                <th>Ngày tạo</th>
                                <th>Email</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr id="row_@item.ID">
                                <td>@item.Username</td>
                                <td>@item.Name</td>
                                <td>@(item.BirthDay!=null? @item.BirthDay.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>@item.Phone</td>
                                <td>@(item.CreatedDate != null ? @item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>@item.Email</td>
                                <td>
                                    <a href="/Admin/User/Edit/@item.ID">Sửa</a>&nbsp;/
                                    @*<a href="/Admin/User/Delete/@item.ID">Xóa</a>*@
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                     })
                                    @*@Html.ActionLink("DMM", "Delete", "User")*@
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>

                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = ViewBag.searchString }))

                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>