@model PagedList.IPagedList<Model.EF.Branch>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header {
    Danh sách hãng
}

@section jsFooter{
    <script src="~/Assets/admin/dist/js/controller/branchController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách hãng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="row">
                    @using(Html.BeginForm("Index", "Branch", FormMethod.Get))
                    {
                    <div class="form-group">
                        <div class="col-md-2">
                            <a href="/Admin/Branch/Create" class="btn btn-primary btn-block btn-outline">Thêm mới</a>
                        </div>
                        <div class="col-md-4 col-md-offset-4">
                            <input type="text" name="searchString" placeholder="Nhập giá trị tìm kiếm" class="form-control" value="@ViewBag.searchString" />
                        </div>
                        <div class="col-md-2">
                            <input type="submit" name="name" class="btn btn-info btn-block btn-outline" value="Tìm kiếm" />
                        </div>
                    </div>
                    }

                </div>
                <p></p>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Ngày tạo</th>
                                <th>Ảnh</th>
                                <th>Thứ tự hiển thị</th>
                                <th>Tình trạng</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.BranchName</td>
                                    <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "" )</td>
                                    <td>@(item.Status == true ? "Kích hoạt" : "Khóa")</td>
                                    <td>@item.DisplayOrder</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status == true ? "Kích họat" : "Khóa")</a></td>
                                    <td>
                                        <a href="/Admin/Branch/Edit/@item.ID">Sửa</a>&nbsp;/
                                        @*<a href="/Admin/User/Delete/@item.ID">Xóa</a>*@
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions {
                                           Confirm = "Bạn có muốn xóa bản ghi này?",
                                           OnComplete = "$('#row_" + @item.ID + "').remove()",
                                           HttpMethod = "Delete"
                                         })
                                        @*@Html.ActionLink("DMM", "Delete", "User")*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>