@model List<Model.EF.Product>
@{
    /**/
    var branch = (Model.EF.Branch)ViewBag.Branch;
    ViewBag.Title = branch.BranchName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>@branch.BranchName</h3>
        </div>
        <div class="see">
            <p><a href="#">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach(var item in Model)
        {
            var url = "/chi-tiet/" + item.Alias + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt="" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")<u>đ</u></span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-gio-hang?productID=@item.ID&quantity=1">Thêm vào giỏ</a></h4>
                    </div>
                </div>

            </div>
        }
        <div class="clear"></div>
        <!--Phân trang-->
        @if(ViewBag.TotalPage > 1)
        {
            var pageDisplay = (int)(ViewBag.MaxPage);
            int totalPage = (int)ViewBag.TotalPage;
            int currentPage = ((int)ViewBag.Page);

            var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
            var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);
            var link = "/san-pham/" + branch.Alias + "-" + branch.ID;
            <nav>
                @*<ul class="pagination  justify-content-end">*@
                    <div class="content-pagenation">
                        @if(currentPage > ViewBag.First)
                        {
                            <li class="page-item"><a href="@link?page=@ViewBag.First" title="Trang đầu">Đầu</a></li>
                            <li class="page-item"><a href="@link?page=@ViewBag.Prev" title="Trang trước" c><i class="fa fa-angle-left"></i></a></li>
                        }
                        @for(int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if(currentPage == i)
                            {
                                <li class="page-item active"><a href="@link?page=@i" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a href="@link?page=@i" title="Trang @i">@i</a></li>
                            }
                        }
                        @if(currentPage < totalPage)
                        {
                            <li class="page-item"><a href="@link?page=@ViewBag.Next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                            <li class="page-item"><a href="@link?page=@ViewBag.Last" title="Trang cuối">Cuối</a></li>
                        }
                    </div>
                @*</ul>*@
            </nav>
        }
        else
        {
            <span>Không có bản ghi nào</span>
        }
    </div>
</div>

