@model List<Dido_Store_2.Models.CartItem>
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sản phẩm</h2>
<hr>
<div class="section group">
    <table id="tblGioHang" class="table table-hover">
        @if(Model.Count > 0)
        {
            <thead>
                <tr style="font-weight:bold; font-size:1.3em">
                    <th>Mã</th>
                    <th>Tên</th>
                    <th>Ảnh</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody id="dsGioHang">
                @foreach(var item in Model)
                {
                    <tr id="line_@item.Product.ID">
                        <td>@item.Product.ID</td>
                        <td>@item.Product.Name</td>
                        <td><img src="@item.Product.Image" width="100" alt="Alternate Text" /></td>
                        <td class="text-danger">@item.Product.Price.GetValueOrDefault(0).ToString("N0")<u>đ</u></td>
                        <td>@item.Quantity</td>
                        <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))<u>đ</u></td>
                    </tr>
                }
            </tbody>

        }
    </table>
</div>
<h2>Thông tin người nhận</h2>
<hr>
<div class="section group">
    <div class="col-md-offset-3 col-md-6" >
        @using(Html.BeginForm("Payment", "Cart", FormMethod.Post))
        {
            <form>
                <div class="form-group">
                    <label>Tên người nhận</label>
                    <input class="form-control" name="shipName" placeholder="Tên người nhận" />
                </div>
                <div class="form-group">
                    <label>Điện thoại người nhận</label>
                    <input class="form-control" name="shipMobile" placeholder="Điện thoại người nhận" />
                </div>
                <div class="form-group">
                    <label>Email người nhận</label>
                    <input class="form-control" name="shipEmail" placeholder="Email người nhận" />
                </div>
                <div class="form-group">
                    <label>Địa chỉ nhận</label>
                    <input class="form-control" name="shipAddress" placeholder="Địa chỉ nhận" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Xác nhận" class="btn btn-primary"  />
                </div>
            </form>
        }
    </div>
</div>