@model List<Dido_Store_2.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section jsFooter{

    <script src="/Assets/client/js/controller/cartController.js"></script>
}

<h2>Giỏ hàng của bạn</h2>
<hr>
<h3 class="alert  alert-warning  text-center gioHangTrong hidden ">Giỏ hàng trống</h3>
<table id="tblGioHang" class="table table-hover">
    @if(Model.Count > 0)
    {
        <thead>
            <tr style="font-weight:bold; font-size:1.3em">
                <th>Mã</th>
                <th>Tên</th>
                <th>Ảnh</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>


        <tbody id="dsGioHang">
            @foreach(var item in Model)
            {
                <tr id="line_@item.Product.ID">
                    <td>@item.Product.ID</td>
                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.Image" width="100" alt="Alternate Text" /></td>
                    <td class="text-danger">@item.Product.Price.GetValueOrDefault(0).ToString("N0")<u>đ</u></td>
                    <td><input type="number" min="1" data-id="@item.Product.ID" class="txtQuantity text-center rounded" value="@item.Quantity" /></td>
                    <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))<u>đ</u></td>
                    <td><a href="#" class="btnDelete" data-id="@item.Product.ID"><i class="fa fa-2x fa-trash"></i></a></td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td> <button class="btn btn-primary" id="btnContinue">Tiếp tục mua hàng</button>  </td>
                <td> <button class="btn btn-warning" id="btnUpdate">Cập nhật giỏ hàng</button>     </td>
                <td> <button class="btn btn-danger" id="btnDeleteAll">Xóa giỏ hàng</button>          </td>
                <td> <button class="btn btn-success" id="btnPayment">Thanh toán</button>     </td>
            </tr>
        </tbody>
        
    }
    else
    {
        <h3 class="alert  alert-warning  text-center ">Giỏ hàng trống</h3>
    }

</table>
